
<div class="container contact-card">
    <div class="col-lg-6 col-lg-offset-3">
    	
    <!-- ===== vCard Navigation ===== -->
    <div class="row w">
    	<div class="col-md-4">
    		<% if @user.avatar.present? %>
    			<%= image_tag @user.avatar.url, class: "img-responsive" %>
    		<% else %>
    			<h1 class="text-center"><i class="fa fa-user fa-5x"></i></h1>
    		<% end %>

			<ul class="nav nav-tabs nav-stacked" id="myTab">
					  <li class="active"><a href="#about">Profil</a></li>
					  <li><a href="#profile">Compétences</a></li>
					  <li><a href="#portfolio">Centres d'intérêts</a></li>
					  <li><a href="#contact">Contact</a></li>
			</ul>    			
		</div><!-- col-md-4 -->

    	<!-- ===== vCard Content ===== -->
    	<div class="col-md-8">
	    	<div class="tab-content">
	    			
	    		<!-- ===== First Tab ===== -->
				<div class="tab-pane active" id="about">
					  	
					<h3><%= @user.full_name %></h3>
					<h5><%= @user.profession %>
						<% if @user.is_boss && @user.company.present? %>
						  chez <span class="blue"><%= @user.company %></span>
						<% end %>
					</h5>
					<hr>
						  	
					<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p> 
						
					<%= @user.video_link_html %>
				</div><!-- tab about -->
					  
	    	<!-- ===== Second Tab ===== -->
				<div class="tab-pane" id="profile">
					  	
					<h3>Compétences</h3>
					<hr>
					  	
					<h4><i class="fa fa-briefcase"></i>  Acquises la pratique</h4>
					<% @user.skills.practical.each do |skill| %>
						<span class="label label-primary"><%= skill.name %></span>
					  	
					<% end %>
					  
					<h4><i class="fa fa-graduation-cap"></i> Attestées par diplôme</h4>
					<% @user.skills.certified.each do |skill| %>
						<span class="label label-primary"><%= skill.name %></span>
					  	
					<% end %>
					  		  
				</div><!-- Tab Profile -->
					  
	    	<!-- ===== Third Tab ===== -->
				<div class="tab-pane" id="portfolio">
					<h3><i class="fa fa-heart"></i> Centres d'intérêts</h3>
					<hr>
					  	
					<% @user.interests.each do |interest| %>
						<span class="label label-primary"><%= interest.name %></span>
					  	
					<% end %>
					  
					
				</div><!-- /Tab Portfolio -->
					  
	    			  <!-- ===== Fourth Tab ===== -->
					  <div class="tab-pane" id="contact">
						  <h4>Contacter <%= @user.full_name %></h4>
						  <hr>
						  <div class="row">
							  <div class="col-xs-6">
								  <p class="sm">
								  	<i class="fa fa-globe"></i> - App Strat Gram <br/>
									<i class="fa fa-envelope"></i> - laetitia@appstratgram.com 
								  </p>
							  </div><!-- col-xs-6 -->
							  
							  <div class="col-xs-6">
								  <p class="sm">
								  	<i class="fa fa-phone"></i> - +32 476 63 02 63 <br/>
									<i class="fa fa-apple"></i> - +32 222 22 22  
								  </p>
							  </div><!-- col-xs-6 -->
						  </div><!-- row -->
						  
						  <h4>Social Links</h4>
						  <hr>
						  <div class="row">
							  <div class="col-xs-6">
								  <p class="sm">
								  	<i class="fa fa-facebook"></i> - LaetitiaMassa <br/>
									<i class="fa fa-tumblr"></i> - IpItGeeky  
								  </p>
							  </div><!-- col-xs-6 -->
							  
							  <div class="col-xs-6">
								  <p class="sm">
								  	<i class="fa fa-dribbble"></i> - Laetitia <br/>
									<i class="fa fa-twitter"></i> - @LaetitiaMassa  
								  </p>
							  </div><!-- col-xs-6 -->
						  </div><!-- row -->
					  </div><!-- Tab Contact -->
					  
					</div><!-- Tab Content -->
    			</div><!-- col-md-8 -->
    		</div><!-- row w -->
    	</div><!-- col-lg-6 -->
    </div><!-- /.container -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="assets/js/jquery.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
	<script>
	$('#myTab a').click(function (e) {
	  e.preventDefault()
	  $(this).tab('show')
	})	
	</script>    
    
  
