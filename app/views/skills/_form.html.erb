<%= simple_form_for(@skill) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :skill_name_id %>
    <%= f.select :how, options_for_select(["Instruction","Pratique"],:disabled => ["Par quel biais ?"]) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
